<div class=" border-bottom py-1 bg-dark">
  <div class="d-flex justify-content-between align-items-center mx-2">
    <h3><%= cl_image_tag("big_ass_sticker_lh9ks3.png", width: 70, height: 70, crop: :fill) %>Cocktéléphant</h3>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-warning mx-3" %>
  </div>
</div>

<div class="container mt-3">
  <h1>Ne vous trompez pas de cocktail 🐘</h1>

  <div class="cards mt-5">
    <% @cocktails.each do |cocktail| %>
      <div class="card-cocktail p-3 m-3" style="width: 18rem;">
        <% if cocktail.photo.attached? %>
          <%= cl_image_tag cocktail.photo.key, height: 200, width: 250, crop: :fill %>
        <% else %>
          <%= image_tag "https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.marmiton.org%2Frecettes%2Frecette_blue-lagoon_371678.aspx&psig=AOvVaw0L5oNduzjyh6ze4VarzC1H&ust=1573923735935000&source=images&cd=vfe&ved=0CAIQjRxqFwoTCJiSmIDZ7OUCFQAAAAAdAAAAABAD", alt: "alttext" %>
        <div class="card-body">
          <h4 class="card-text"><%= link_to cocktail.name, cocktail_path(cocktail, class: "btn-text") %></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>

