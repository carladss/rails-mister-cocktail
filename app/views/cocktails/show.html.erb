<div class="container mt-3">
  <h1><%= @cocktail.name %></h1>
  <div class="img-doses d-flex p-3">

    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag "https://assets.afcdn.com/recipe/20190222/88136_w1024h768c1cx2736cy1824cxt0cyt0cxb5466cyb3641.jpg", alt: "alttext", height: 300, width: 400 %>
    <% end %>

    <ul>
      <% @cocktail.doses.each do |cocktail| %>
        <li><%= cocktail.ingredient.name %> - <%= cocktail.description %> <%= link_to "❌", dose_path(cocktail), method: :delete %></li>
      <% end %>
    </ul>
  </div>

  <br>

  <%=  render 'doses/new', cocktail: @cocktail, dose: @dose %>

  <%= link_to "Back to cocktails", root_path  %>
</div>
